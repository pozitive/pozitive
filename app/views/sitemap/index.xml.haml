- base_url = "http://#{request.host_with_port}"
!!! XML
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
  %url
    - @blogs.each do |locale, blogs|
      - blogs.each do |blog| 
        %loc #{base_url}/#{locale}/#{blog.permalink}
        %lastmod=blog.updated_at
        %changefreq monthly
        %priority 0.5
    - @static_pages.each do |locale, static_pages|
      - static_pages.each do |page| 
        %loc #{base_url}/#{locale}/#{page}
        %changefreq monthly
        %priority 0.9
