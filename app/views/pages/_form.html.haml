= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, {required: ''}
  .field
    = f.label :permalink
    = f.text_field :permalink, {required: ''}
  .field
    = f.label :content
    = f.text_area :content, {required: ''}
  .actions
    = f.submit 'Save'
