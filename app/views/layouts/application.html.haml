!!! 5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{name: "google-site-verification", content: "bHwRgCIQ67pRXf7Wz3UCN0fbK9gwsojH9boVSk5OZZM"}
    = favicon_link_tag
    %title
      = content_for?(:title) ? yield(:title) : "Pozitive"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    = render "layouts/topbar"
    = yield :top
    %main#content
      .row
        .columns.small-12
          = yield
    = yield :bottom

    = render "layouts/footer"
    = render "layouts/analytics"

    = javascript_include_tag "application"

