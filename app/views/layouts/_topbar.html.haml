%header#header.sticky
  %nav.top-bar.shadow{data: {topbar: ""}}
    %ul.title-area
      %li.name
        %h1#logo
          = link_to ("POZ" + image_tag('logo_55.png') + "IVE").html_safe, root_path
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span MENU
    %section.top-bar-section
      %ul#navbar.right
        %li.divider
        %li= link_to t('home'), root_path
        %li.divider
        %li.has-dropdown
          = link_to "LANGUAGES", locale: "en"
          %ul.dropdown
            %li= link_to "ENGLISH", locale: "en"
            %li= link_to "РУССКИЙ", locale: "ru"
            %li= link_to "简体中文", locale: "zh-CN"
        %li.divider
        %li.has-form
          %a.button.tiny.success.radius{ data: {action: "button-kick--project"}}= t('jumpproject')
        = link_to "Sign out", destroy_user_session_path, :method => :delete, class: "button tiny radius" if user_signed_in?
