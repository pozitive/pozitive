= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Имя"
    = f.text_field :name, {required: '', placeholder: "Ваше имя"}
  .field
    = f.label "Телефон"
    = f.text_field :phone, {placeholder: "(555) 555-5555"}
  .field
    = f.label "Электронная почта"
    = f.text_field :email, {required: '', placeholder: "Yourname@example.biz"}
  .field.hide
    = f.label "Компания"
    = f.text_field :company, {placeholder: "Пожалуйста напишите название вашей компании ..."}
  .field.hide
    = f.label "Идея"
    = f.text_field :idea, {placeholder: "Коротко о вашей идеи ..."}
  .field
    = f.label "Сообщение"
    = f.text_area :message, {required: '', placeholder: "Ваше сообщение..."}
  .field.hide
    = f.label "Дополнительно"
    = f.text_field :extra, {placeholder: "Дополнительная информация"}
  .field
    = f.label "Тип веб-сайта"
    = f.text_field :type_website, {value: params[:type_website]}
  .actions
    = f.submit t('form.send'), class: "button success radius"
